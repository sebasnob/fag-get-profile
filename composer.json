{
    "name": "FAG-get-profile",
    "description": "A Slim Framework application to get facebook user information, using the Facebook API Graph",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/sebasnob/fag-get-profile",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Maldoni",
            "email": "sebastianmaldoni@gmail.com",
            "homepage": "https://github.com/sebasnob"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "facebook/graph-sdk": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
